		<Frames>
			<!-- NEW: Page number input box -->
			<EditBox parentKey="PageInput" inherits="InputBoxTemplate">
				<Size x="30" y="32"/>
				<Anchors>
					<Anchor point="CENTER"/>
				</Anchors>
				<KeyValues>
					<KeyValue key="layoutIndex" value="1" type="number"/>
				</KeyValues>
				<Scripts>
					<OnLoad> 
						self:SetAutoFocus(false) 
					</OnLoad> 
					<OnEnterPressed>
						-- Convert text to number and call your paging logic
						local page = tonumber(self:GetText())
						local currParent = self:GetParent();
						if page then
							local pageChanged = currParent:SetCurrentPage(page);
							if pageChanged and currParent.nextPageSound then
								PlaySound(currParent.nextPageSound);
							end
						end
						self:ClearFocus()
						self:SetText("")
					</OnEnterPressed>
				</Scripts>
			</EditBox>
			<!-- First page -->
			<Button parentKey="FirstPageButton" inherits="BW_PagingControlsFirstPageButtonTemplate">
				<KeyValues>
					<KeyValue key="layoutIndex" value="3" type="number"/>
				</KeyValues>
