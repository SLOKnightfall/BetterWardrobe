	<Frame name="BW_PagingControlsHorizontalTemplate" inherits="HorizontalLayoutFrame, PagingControlsTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="spacing" value="5" type="number"/>
		</KeyValues>
		<Size x="140" y="32"/>
		<Layers>
			<Layer level="ARTWORK">
				<!-- Page text now comes AFTER the edit box -->
				<FontString parentKey="PageText" inherits="PageTextTemplate">
					<KeyValues>
						<KeyValue key="layoutIndex" value="2" type="number"/>
					</KeyValues>
				</FontString>
